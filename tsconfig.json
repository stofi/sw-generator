{
  "compilerOptions": {
    "target": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "module": "commonjs",
    "moduleResolution": "nodenext"
  },
  "include": ["./src/*.ts"],
  "exclude": ["node_modules"]
}
